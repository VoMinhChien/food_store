@model asmC5.Models.User
<link href="~/cssdangnhap/dn.css" rel="stylesheet">
<div class="container" id="container">
	<div class="form-container sign-up-container">
		<form asp-controller="Users" asp-action="KhachHangCreate"
      method="post" enctype="multipart/form-data">>
			<h1>Create Account</h1>
			<div class="social-container">
				<a href="#" class="social"><i class="fab fa-facebook-f"></i></a>
				<a href="#" class="social"><i class="fab fa-google-plus-g"></i></a>
				<a href="#" class="social"><i class="fab fa-linkedin-in"></i></a>
			</div>
			<span>or use your email to sign up</span>
			<input type="text" asp-for="UserFullName" placeholder="Name" />
			

			<input type="email" asp-for="UserEmail" placeholder="Email" />
			

			<input type="tel" asp-for="UserPhone" placeholder="Phone" />
			

			<input type="text" asp-for="UserAddress" placeholder="Address" />
			

			<input type="password" asp-for="UserPassWord" placeholder="Password" />
			
			<button type="submit">Register</button>
		</form>
	</div>
	<div class="form-container sign-in-container">
		<form asp-controller="Users" asp-action="DangNhap"
      method="post" enctype="multipart/form-data">
			<h1>Log in</h1>
			<div class="social-container">
				<a href="#" class="social"><i class="fab fa-facebook-f"></i></a>
				<a href="#" class="social"><i class="fab fa-google-plus-g"></i></a>
				<a href="#" class="social"><i class="fab fa-linkedin-in"></i></a>
			</div>
			<span>or use your account</span>
			<input asp-for="UserEmail" type="email"  placeholder="Email" />
			
			<input asp-for="UserPassWord" type="password" value="abc123"  placeholder="Password" />
			
			@*<a href="#">Quên mật khẩu?</a>*@
			<button type="submit">Log in</button>
		</form>
	</div>
	<div class="overlay-container">
		<div class="overlay">
			<div class="overlay-panel overlay-left">
				<h1>
Welcome back!</h1>
				<p>
To stay connected with us, please log in with your personal information</p>
				<button class="ghost" id="signIn">Log in</button>
			</div>
			<div class="overlay-panel overlay-right">
				<h1>Chào bạn!</h1>
				<p>
Enter your personal information and start your journey with us</p>
				<button class="ghost" id="signUp">Register</button>
			</div>
		</div>
	</div>
</div>

  <script src="~/jsdangnhap/Jsdn.js"></script>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
  @section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}