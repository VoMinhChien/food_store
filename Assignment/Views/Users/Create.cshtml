@model asmC5.Models.User

@{
    ViewData["Title"] = "Create";
}
@{
    Layout = "_Layout";
}
<h1>CREATE NEW USER</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserFullName" class="control-label"></label>
                <input asp-for="UserFullName" class="form-control" style="border:outset" />
                <span asp-validation-for="UserFullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserEmail" class="control-label"></label>
                <input asp-for="UserEmail" class="form-control" style="border:outset"/>
                <span asp-validation-for="UserEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserPassWord" class="control-label"></label>
                <input asp-for="UserPassWord" class="form-control" style="border:outset"/>
                <span asp-validation-for="UserPassWord" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserGender" class="control-label"></label>
                <input asp-for="UserGender" class="form-control" style="border:outset"/>
                <span asp-validation-for="UserGender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserBirtday" class="control-label"></label>
                <input asp-for="UserBirtday" class="form-control" style="border:outset"/>
                <span asp-validation-for="UserBirtday" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserPhone" class="control-label"></label>
                <input asp-for="UserPhone" class="form-control" style="border:outset"/>
                <span asp-validation-for="UserPhone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserAddress" class="control-label"></label>
                <input asp-for="UserAddress" class="form-control" style="border:outset"/>
                <span asp-validation-for="UserAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RoleID" class="control-label"></label>
                <select asp-for="RoleID" class ="form-control" asp-items="ViewBag.RoleID"></select>
            </div>
            <div class="form-group" hidden>
                <label asp-for="UserToken" class="control-label"></label>
                <input asp-for="UserToken" class="form-control" style="border:outset"/>
                <span asp-validation-for="UserToken" class="text-danger"></span>
            </div>
