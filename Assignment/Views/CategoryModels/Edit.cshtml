@model asmC5.Models.CategoryModels

@{
    ViewData["Title"] = "Edit";
}
@{
    Layout = "_Layout";
}

<h1>
EDITING DISH</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CategoryId" />
            <div class="form-group">
                <label asp-for="CategorName" class="control-label">TYPE NAME</label>
                <input asp-for="CategorName" class="form-control" style="border:outset" />
                <span asp-validation-for="CategorName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
