@model asmC5.Models.Foods

@{
    ViewData["Title"] = "Edit";
    var duoifiles = ViewBag.duoi;
     var hour = ViewBag.gio;
}
@{
    Layout = "_Layout";
     var id=ViewBag.userid;
}
<h1>CHỈNH SỬA MÓN ĂN</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="FoodID" />
            <div class="form-group">
                <label asp-for="FoodName" class="control-label">NAME OF FOOD</label>
                <input asp-for="FoodName" class="form-control"  style="border:outset"/>
                <span asp-validation-for="FoodName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FoodCategory" class="control-label">DETAILS OF DISH</label>
                <select asp-for="FoodCategory" class="form-control" asp-items="ViewBag.FoodCategory"></select>
                <span asp-validation-for="FoodCategory" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FoodPrice" class="control-label">PRICE</label>
                <input asp-for="FoodPrice" class="form-control"  style="border:outset"/>
                <span asp-validation-for="FoodPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FoodImage" class="control-label">PICTURE</label>
                <input asp-for="FoodImage" class="form-control" hidden  style="border:outset"/>
                <span asp-validation-for="FoodImage" class="text-danger"></span>
            </div>
            <div>
                 @if (duoifiles ==".png" || duoifiles ==".jpeg" || duoifiles ==".gif" || duoifiles ==".tiff" || duoifiles ==".psd" || duoifiles ==".jfif"|| duoifiles==".jpg"||duoifiles==".pdf")
            {
                <img src="~/TaiLieu/@Model.FoodImage" width="70px" height="80px" />

            }
            </div>
          
            <div class="form-group">
                <label asp-for="FoodType" class="control-label">DESCRIBE</label>
                <input asp-for="FoodType" class="form-control"  style="border:outset"/>
                <span asp-validation-for="FoodType" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="fileUpload" class="control-label">FILE NEW</label>
             
                <input  asp-for="fileUpload" type="file" name="fileUpload"    />
                
                <span asp-validation-for="fileUpload" class="text-danger"></span>



            </div>
            <div class="form-group">
                <label asp-for="CreatDate" class="control-label">DATE CREATED</label>
                <input asp-for="CreatDate" class="form-control"  style="border:outset"/>
                <span asp-validation-for="CreatDate" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="ModifyDate" class="control-label">DAY UPDATED</label>
                <input asp-for="ModifyDate" class="form-control"  value="@hour"/>
                <span asp-validation-for="ModifyDate" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="ModifyBy" class="control-label">CREATOR</label>
                <input asp-for="ModifyBy" class="form-control" value="@id"  style="border:outset"/>
               @* <span asp-validation-for="ModifyBy" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <label asp-for="VAT" class="control-label">TAX</label>
                <input asp-for="VAT" class="form-control"  style="border:outset" />
                <span asp-validation-for="VAT" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsDelete" style="border:outset"/> @Html.DisplayNameFor(model => model.IsDelete )
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
